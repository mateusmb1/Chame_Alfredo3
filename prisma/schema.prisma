generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

enum ProductType {
  PRODUCT
  SERVICE
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Decimal
  costPrice   Decimal?
  stock       Int         @default(0)
  type        ProductType
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}

model Order {
  id            Int         @id @default(autoincrement())
  clientId      String
  client        Client      @relation(fields: [clientId], references: [id])
  status        OrderStatus @default(PENDING)
  totalAmount   Decimal
  scheduledDate DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]
  notes         String?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}
